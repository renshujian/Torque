<Window x:Class="Torque.ChangePasswordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Torque"
        mc:Ignorable="d"
        Title="修改密码" SizeToContent="Height" Width="300">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TextBlock>输入密码：</TextBlock>
        <PasswordBox Name="passwordBox" Grid.Column="1"/>
        <TextBlock Grid.Row="1">再次输入：</TextBlock>
        <PasswordBox Name="passwordBox2" Grid.Row="1" Grid.Column="1"/>
        <Button Grid.Row="2" Grid.Column="2" Width="50" HorizontalAlignment="Right" Margin="3" Click="Button_Click" IsDefault="True">确认</Button>
    </Grid>
</Window>
