<Window x:Class="Torque.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Torque"
        mc:Ignorable="d"
        Title="紧固工具校准管理系统" Height="150" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label VerticalContentAlignment="Center" HorizontalContentAlignment="Right">用户名：</Label>
        <TextBox x:Name="usernameBox" Grid.Column="1" VerticalContentAlignment="Center"/>
        <Label Grid.Row="1" VerticalContentAlignment="Center" HorizontalContentAlignment="Right">密码：</Label>
        <PasswordBox x:Name="passwordBox" Grid.Row="1" Grid.Column="1" VerticalContentAlignment="Center"/>
        <Button Click="Submit" IsDefault="True" Grid.Row="2" Grid.Column="2" Margin="10 0">
            登录
        </Button>
    </Grid>
</Window>
